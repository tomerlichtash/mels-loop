{
	"name": "mels-loop",
	"version": "1.2.3",
	"description": "A Comprehensive Guide to The Story of Mel",
	"engines": {
		"node": ">=18.17"
	},
	"keywords": [
		"hacker",
		"folklore",
		"nextjs"
	],
	"homepage": "https://melsloop.com",
	"bugs": {
		"url": "https://github.com/tomerlichtash/mels-loop/issues",
		"email": "aboutmelsloop@gmail.com"
	},
	"contributors": [
		{
			"name": "Tomer Lichtash",
			"email": "tomerlichtash@gmail.com",
			"url": "https://github.com/tomerlichtash"
		},
		{
			"name": "(David *)Frenkiel",
			"email": "dfl.github@gmail.com",
			"url": "https://github.com/imdfl"
		}
	],
	"import/resolver": {
		"typescript": {}
	},
	"private": true,
	"scripts": {
		"clean": "rm -rf .next",
		"build": "next build",
		"dev": "next dev",
		"start": "next start",
		"build:sitemap": "next-sitemap",
		"lint": "eslint . -f codeframe",
		"lint:style": "stylelint --allow-empty-input \"**/*.{css}\"",
		"format:check": "npx prettier --config .prettierrc --ignore-path .prettierignore --check src",
		"format:all": "npx prettier --config .prettierrc --ignore-path .prettierignore --write src",
		"test:unit": "jest",
		"test:unit:coverage": "jest --coverage",
		"test:e2e": "NODE_OPTIONS='--no-warnings' playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:ci": "playwright test",
		"test:e2e:ci:local": "circleci local execute e2e",
		"upload": "npx ts-node scripts/upload-files.ts"
	},
	"dependencies": {
		"@melsloop/ml-components": "^0.0.1",
		"@radix-ui/react-icons": "^1.3.0",
		"@sendgrid/mail": "8.1.1",
		"classnames": "2.5.1",
		"formik": "^2.4.6",
		"gray-matter": "4.0.3",
		"lodash.orderby": "^4.6.0",
		"next": "14.1.3",
		"next-axiom": "1.1.1",
		"next-themes": "0.2.1",
		"next-translate": "^2.6.2",
		"normalize.css": "8.0.1",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"tmp": "0.2.3",
		"yup": "^1.4.0"
	},
	"devDependencies": {
		"@next/env": "14.1.3",
		"@next/eslint-plugin-next": "14.1.3",
		"@playwright/test": "1.42.1",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/react": "16.0.1",
		"@types/dateformat": "5.0.2",
		"@types/grecaptcha": "^3.0.9",
		"@types/jest": "^29.5.12",
		"@types/lodash.orderby": "^4.6.9",
		"@types/node": "20.11.25",
		"@types/react": "18.3.5",
		"@types/react-dom": "18.3.0",
		"@types/tmp": "0.2.6",
		"@typescript-eslint/eslint-plugin": "7.1.1",
		"@typescript-eslint/parser": "7.1.1",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-formatter-codeframe": "7.32.1",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jsx-a11y": "6.8.0",
		"eslint-plugin-react": "7.34.0",
		"eslint-plugin-react-hooks": "4.6.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jest-expect-message": "^1.1.3",
		"next-router-mock": "^0.9.12",
		"next-sitemap": "4.2.3",
		"next-translate-plugin": "^2.6.2",
		"path": "0.12.7",
		"prettier": "^3.3.3",
		"simple-markdown": "0.7.3",
		"style-loader": "^3.3.4",
		"stylelint": "16.2.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.2"
	}

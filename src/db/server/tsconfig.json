{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2017",
		"lib": ["esnext"],
		"skipLibCheck": true,
		"strict": true,
		"noEmit": false,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"sourceMap": true
	},
	"include": [
		"*.ts", "**/*.ts"
	],
	"exclude": ["node_modules" ]
}

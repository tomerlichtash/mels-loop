{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"paths": {
		"@/components/*": ["components/*"],
		"@/pages/*": ["pages/*"],
		"@/styles/*": ["styles/*"]
	},
	"include": [
		"next-env.d.ts",
		"**/**/*.ts",
		"**/**/*.tsx",
		"globals.d.ts",
		"types.d.ts.bak"
	],
	"exclude": ["node_modules"]
}
